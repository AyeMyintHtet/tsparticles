{
  "compilerOptions": {
    "lib": [
      "ES2015",
      "DOM"
    ],
    "rootDir": "./src",
    "declaration": true,
    "removeComments": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "./tests/",
    "./node_modules/",
    "../../node_modules/",
    "./dist/",
    "./typedoc/",
    "./docs/"
  ]
}